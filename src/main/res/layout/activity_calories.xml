<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CaloriesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:theme="@style/ToolbarTheme">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:letterSpacing="0.2"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </androidx.appcompat.widget.Toolbar>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:text="Target Calory Intake"
        android:textColor="?android:textColorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"/>


    <RadioGroup
        android:id="@+id/gender_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@drawable/edit_text_round"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="?android:textColorPrimary"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/male"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:buttonTint="@color/purple_500"
            android:textColor="?android:textColorPrimary"
            android:text="Male" />

        <RadioButton
            android:id="@+id/female"
            android:buttonTint="@color/purple_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:textColorPrimary"
            android:text="Female" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Your Weight in Kg"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_round"
        android:inputType="numberDecimal"
        android:textSize="16sp"
        android:textColorHint="#808080"
        android:padding="10dp"
        android:hint="Weight (KG)"
        android:textColor="?android:textColorPrimary"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Your Height in Cm"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_round"
        android:inputType="numberDecimal"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        android:hint="Height (Cm)"
        android:textColorHint="#808080"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Age in Years"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_round"
        android:inputType="number"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        android:hint="Age"
        android:textColorHint="#808080"
        android:padding="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Physical Activity"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edit_text_round"
        android:layout_margin="10dp">
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorPrimary"
        android:drawSelectorOnTop="true"
        android:entries="@array/calories_items"
        android:pointerIcon="vertical_double_arrow"

        android:padding="12dp" />
    </LinearLayout>
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="calculate"
        android:textAllCaps="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Result"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="?android:textColorPrimary"
        android:textStyle="bold"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textColor="?android:textColorPrimary"
        android:textSize="24sp" />


</LinearLayout>